<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize" />
    <CalendarView
        android:id="@+id/calendarView1"
        style="@android:style/Widget.Holo.Light.CalendarView"
        android:layout_width="match_parent"
        android:layout_height="200pt"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:onClick="onClick"
        android:selectedWeekBackgroundColor="#42A5F5"
        android:shownWeekCount="8"
        android:textAlignment="center"
        android:weekNumberColor="#0000ff"
        android:weekSeparatorLineColor="#0D47A1" />

    <TextView
        android:id="@+id/textWeek1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chetn"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingStart="6dp"/>

    <TextView
        android:gravity="center"
        android:id="@+id/textWeek2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nechetn"
        android:textStyle="bold"
        android:paddingStart="6dp"/>


</LinearLayout>
